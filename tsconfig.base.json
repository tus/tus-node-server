{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["es2020"],
    "module": "NodeNext",
    "target": "es2020",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  }
}
