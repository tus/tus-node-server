{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "include": ["index.ts", "lib/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true
  }
}
